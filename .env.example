# AI Token Manager + Exo Bridge Environment Variables
# Copy this file to .env and configure as needed

# Exo Configuration
EXO_HOST=localhost
EXO_PORT=8000

# Token Manager Configuration
TOKEN_MANAGER_CONFIG=~/.token_manager_config.json
TOKEN_MANAGER_REPO_PATH=~/ai-token-manager
EXO_REPO_PATH=~/exo

# Bridge Settings
ENABLE_AUTO_FAILOVER=true
PREFER_LOCAL=true
ENABLE_HUD=false
HUD_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bridge.log

# Monitoring
HEALTH_CHECK_INTERVAL=10
NODE_TIMEOUT=30
METRICS_RETENTION=100

# Optional: Cloud Provider API Keys (if using failover)
# These should be in token manager config, but can override here
# OPENROUTER_API_KEY=your_key_here
# HUGGINGFACE_API_KEY=your_key_here
